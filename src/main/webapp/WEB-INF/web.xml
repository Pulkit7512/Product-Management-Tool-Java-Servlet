<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>AdvanceJavaAssignment3</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>UserCheck</servlet-name>
  	<servlet-class>com.nagarro.assignment.controller.UserCheck</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UserCheck</servlet-name>
  	<url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Add</servlet-name>
  	<servlet-class>com.nagarro.assignment.controller.AddProductForm</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Add</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Delete</servlet-name>
  	<servlet-class>com.nagarro.assignment.controller.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Delete</servlet-name>
  	<url-pattern>/deleted</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Edit</servlet-name>
  	<servlet-class>com.nagarro.assignment.controller.EditServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Edit</servlet-name>
  	<url-pattern>/edit</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>com.nagarro.assignment.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>